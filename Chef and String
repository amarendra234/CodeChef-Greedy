#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    string s;
	    cin>>s;
	    int pairs=0;
	    int i=0;
	     while(i<s.length()-1){
	         if(s[i]!=s[i+1]){
	             pairs++;
	             i+=2;
	         }else{
	             i++;
	         }
	     }
	     cout<<pairs<<endl;
	}
	return 0;
}
